@page "/power"
@rendermode InteractiveServer

<h3>Power</h3>

<input type="number" @bind="n"/>
<label>^</label>
<input type="number" @bind="p"/>
<button @onclick="Calc"> = </button>
<label>@result</label>

@code 
{
	double n = 0;
	double p = 0;
	double result;
	void Calc()
	{
		result = 1;

		result = Math.Pow(n, p);
	}
}
